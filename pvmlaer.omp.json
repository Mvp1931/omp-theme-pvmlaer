{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "root",
                    "style": "diamond",
                    "foreground": "#010203",
                    "background": "#FACE0F",
                    "template": " \udb85\udc0b ",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b8"
                },
                {
                    "type": "os",
                    "style": "diamond",
                    "foreground": "#077BE7",
                    "background": "#000727",
                    "leading_diamond": "\ue0be",
                    "trailing_diamond": "\ue0b8",
                    "template": " {{ if .WSL }}WSL at {{ end }}{{ .Icon }}  "
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "foreground": "#FACE0F",
                    "background": "#1E1909",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "background": "#200b3b",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#300B0B{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#07030f{{ end }}",
                        "{{ if gt .Ahead 0 }} #ffcc80 {{ end }}",
                        "{{ if gt .Behind 0 }} #ffcc80 {{ end }}"
                    ],
                    "foreground": "#8543FA",
                    "trailing_diamond": "\ue0b0",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "source": "cli"
                    },
                    "style": "diamond",
                    "template": " {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} <#FF6F00>\uf044 {{ .Working.String }}</>{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "type": "git"
                }
            ]
        }
    ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "#FFFFFF",
        "template": "<#FACE0F>{{ .UserName }}</> {{ .Shell }} \ue691 "
    },
    "version": 2
}
